{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/init-db",
      "dest": "api/init-db.py"
    },
    {
      "src": "/api/cron/content-generation",
      "dest": "api/cron.py"
    },
    {
      "src": "/api/cron/health",
      "dest": "api/cron.py"
    },
    {
      "src": "/api/cron/test",
      "dest": "api/cron.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/content-generation",
      "schedule": "30 3 * * *"
    },
    {
      "path": "/api/cron/content-generation",
      "schedule": "42 10 * * *"
    },
    {
      "path": "/api/cron/content-generation",
      "schedule": "30 12 * * *"
    },
    {
      "path": "/api/cron/content-generation",
      "schedule": "0 15 * * *"
    },
    {
      "path": "/api/cron/content-generation",
      "schedule": "20 13 * * *"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "VERCEL_ENV": "production"
  },
  "regions": ["iad1"]
} 