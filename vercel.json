{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/init-db",
      "dest": "api/init-db.py"
    },
    {
      "src": "/api/cron/(.*)",
      "dest": "api/cron.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/content-generation",
      "schedule": "0 14 * * *"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "VERCEL_ENV": "production"
  },
  "regions": ["iad1"]
} 