{
  "version": 2,
  "routes": [
    {
      "src": "/api/init-db",
      "dest": "api/init-db.py"
    },
    {
      "src": "/api/cron/(.*)",
      "dest": "api/cron.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/content-generation",
      "schedule": "0 14 * * *"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "VERCEL_ENV": "production"
  },
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python",
      "maxDuration": 30
    },
    "api/cron.py": {
      "runtime": "@vercel/python",
      "maxDuration": 300
    },
    "api/init-db.py": {
      "runtime": "@vercel/python",
      "maxDuration": 60
    }
  },
  "regions": ["iad1"]
} 