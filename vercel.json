{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/init-db",
      "dest": "api/init-db.py"
    },
    {
      "src": "/api/cron/content-generation",
      "dest": "api/cron.py"
    },
    {
      "src": "/api/cron/health",
      "dest": "api/cron.py"
    },
    {
      "src": "/api/cron/test",
      "dest": "api/cron.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/content-generation",
      "schedule": "30 3 * * *",
      "comment": "09:00 AM IST"
    },
    {
      "path": "/api/cron/content-generation",
      "schedule": "42 10 * * *",
      "comment": "04:12 PM IST"
    },
    {
      "path": "/api/cron/content-generation",
      "schedule": "30 12 * * *",
      "comment": "06:00 PM IST"
    },
    {
      "path": "/api/cron/content-generation",
      "schedule": "0 15 * * *",
      "comment": "08:30 PM IST"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "VERCEL_ENV": "production"
  },
  "regions": ["iad1"]
} 